extends ./template.pug
        
block content
    h1 Welcome to GalaxyStore Departments, where you find all your needs

    .card.text-center
        .card-header
        | Special Deals
        .card-body
            h5.card-title Online Deals for Work From Home
            p.card-text Shop from the comfort of your home and get delivered at your door steps*
            a.btn.btn-primary(href='#') Go Shopping
    .row
        each product in products
            .col-sm-3
                .card(style='width: 16rem;')
                    img.card-img-top(src= product.image alt='...')
                    .card-body
                    h5.card-title= product.name
                    p.card-text= product.description
                    p.card-text Price: $ #{product.price}
                    p.text-muted Rating: #{product.rating}
                    a.btn.btn-primary(href='#') Buy now

    
       
            



    